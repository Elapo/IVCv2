                <figure>
                    <img class="galleryimg ghost" src="{{ base_url ~ a.imageLink }}" alt="image" id="{{ loop.index }}">
                </figure>
        {% else %}
        <div class="col-sm-12 col-md-6 col-lg-3 draggable fixedheight">
            <div class="img-container">
                <figure>
                    <img class="galleryimg ghost" src="https://img.youtube.com/vi/{{ a.imageLink }}/hqdefault.jpg" alt="image" id="{{ loop.index }}">
                </figure>
        {% endif %}
        {% if admin %}
            <div class="btn-group-vertical editmode-btn hidden">
                <button class="btn btn-success editimg" value="{{ a.id }}">Edit</button>
                <button  class="btn btn-danger deleteimg" value="{{ a.id }}">Delete</button>
            </div>
        {% endif %}
        </div>
    </div>
    {% endfor %}
