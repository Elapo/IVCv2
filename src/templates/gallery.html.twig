    <script>
        Sortable.create(imageList,{animation:150, draggable:".draggable", ghostClass:".ghost"});
    </script>
    <div class="row">
        <div class="checkbox col-md-12">
            <label class="cb-label"><input type="checkbox" id="editmode">Edit mode</label>
        </div>
    </div>
